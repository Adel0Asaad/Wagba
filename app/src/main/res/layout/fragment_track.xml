<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/college_fountain"
    android:backgroundTint="#99000000"
    android:backgroundTintMode="src_over"
    tools:context=".ui.fragments.body.TrackFragment">

    <TextView
        android:id="@+id/track_order_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_status_value_text"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.widget.Button
        android:id="@+id/track_order_btn"
        android:layout_width="240dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/cancel_order_btn_text"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:background="@drawable/round_button_red"
        />


</androidx.constraintlayout.widget.ConstraintLayout>