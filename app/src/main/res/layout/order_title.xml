<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_border"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/order_title_rest_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.07"
        android:src="@drawable/logo_kfc"/>
    <TextView
        android:id="@+id/order_title_boiler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/order_title_rest_img"
        app:layout_constraintStart_toEndOf="@+id/order_title_rest_img"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        android:text="@string/order_boiler_string"
        />
    <TextView
        android:id="@+id/order_title_rest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/order_title_boiler_text"
        app:layout_constraintStart_toStartOf="@+id/order_title_boiler_text"
        android:layout_marginTop="9dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/rest_name_text"
        />


</androidx.constraintlayout.widget.ConstraintLayout>