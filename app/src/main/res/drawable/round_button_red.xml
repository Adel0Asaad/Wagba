<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <solid
                android:color="#F63B3B"/>
            <corners
                android:radius="25dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="20dp"
                android:width="20dp" />
        </shape>
        <!--    <color android:color="#6E4545BC"></color>-->

    </item>

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid
                android:color="#DF6363"/>
            <corners
                android:radius="25dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="20dp"
                android:width="20dp" />

        </shape>
        <!--    <color android:color="#6E2C2CF3"></color>-->
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <solid
                android:color="#DF6363"/>
            <corners
                android:radius="25dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="20dp"
                android:width="20dp" />
        </shape>
        <!--    <color android:color="#6E2C2CF3"></color>-->

    </item>


</selector>